package iopackage;

import java.io.File;
import java.text.DecimalFormat;
class ListFile{
	DecimalFormat df = new DecimalFormat("0.00");
	void displayFile(String path) {
		 File dir=new File(path);
	     System.out.println("\tName\t\t\tType\t\tSize");
	     checkDir(dir);
	       
	}
	void checkDir(File dir) {
		 File [] files=dir.listFiles();
		 for(File f:files) {
			 if (f.isFile())
				{
					System.out.println(f.getPath()+"\t\t\tFile\t\t\t"+f.length()+" Bytes");
				} else {
					System.out.println(f.getPath()+"\t\t\tDirectory\t\t\t"+f.length()+" Bytes");
					checkDir(f);
				}
	        }
		
	}
}
public class MyDir {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
       new ListFile().displayFile("src");
	}

}
