package iopackage;

import java.io.File;
class ListFile{
	void displayFile(String path) {
		 File dir=new File(path);
	        File [] files=dir.listFiles();
	        System.out.println("Name\t\tType\t\tSize(MB)");
	        for(File f:files) {
	        	checkDir(f);
	        }
	}
	void checkDir(File f) {
		if (f.isFile())
		{
			System.out.println(f.getName()+"\t\tFile\t\t"+f.getTotalSpace()/(1024*1024));
		} else {
			System.out.println(f.getAbsolutePath()+"\t\tDirectory\t\t"+f.getTotalSpace()/(1024*1024));
		}
	}
}
public class MyDir {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
       new ListFile().displayFile("src");
	}

}
