package iopackage;

import java.io.File;
import java.text.DecimalFormat;
class ListFile{
	DecimalFormat df = new DecimalFormat("0.00");
	void displayFile(String path) {
		 File dir=new File(path);
	        File [] files=dir.listFiles();
	        System.out.println("\t\tName\t\t\t\tType\t\t\tSize");
	        for(File f:files) {
	        	checkDir(f);
	        }
	}
	void checkDir(File f) {
		if (f.isFile())
		{
			System.out.println(f.getName()+"\t\t\tFile\t\t\t"+df.format(f.length()/(1024))+"KB");
		} else {
			System.out.println(f.getName()+"\t\t\tDirectory\t\t\t"+df.format(f.length()/(1024))+"KB");
		}
	}
}
public class MyDir {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
       new ListFile().displayFile("src");
	}

}
